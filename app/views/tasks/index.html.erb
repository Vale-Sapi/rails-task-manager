<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task.id) %> | <%= link_to "Edit task", edit_task_path(task.id) %> <%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
    </li>
<% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
